<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="100dp"
android:orientation="horizontal">

<ImageView android:id="@+id/lista_produtos_personalizados_imagem"
           android:layout_width="100dp"
           android:layout_height="match_parent" />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical">

        <TextView android:id="@+id/ista_produtos_personalizados_nome"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Titulo"
                  android:textSize="30dp" />

        <TextView android:id="@+id/lista_curso_personalizada_valor"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Valor"
                  android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>